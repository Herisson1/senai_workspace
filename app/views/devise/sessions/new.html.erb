<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2 class="text-center">Log In</h2>
    <%= f.input :email, required: false, label: false, placeholder: 'E-mail', autofocus: true, input_html: {class: 'form-control'} %>
    <%= f.input :password, required: false, label: false, placeholder: 'Senha' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  

  <div class="form-actions">
    <%= f.button :submit, "Entrar" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


